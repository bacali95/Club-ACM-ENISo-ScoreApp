<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.acm.scoresystem.NotificationActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg" />

    <TextView
        android:id="@+id/notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/notifications"
        android:textColor="@color/index_text_color"
        android:textSize="@dimen/titles_dimens" />

    <ScrollView
        android:id="@+id/notificationsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/refresh"
        android:layout_below="@id/notifications"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:background="@drawable/rounded_text2"
        android:backgroundTint="#25000000"
        android:padding="10dp"
        android:scrollbars="none">

        <TableLayout
            android:id="@+id/notificationsTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1" />

    </ScrollView>
</RelativeLayout>
